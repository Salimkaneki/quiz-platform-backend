{
  "info": {
    "name": "🔓 Routes Publiques - Quiz Platform",
    "description": "Endpoints accessibles sans authentification",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "base_url",
      "value": "http://localhost:8000/api",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "📚 Institutions",
      "item": [
        {
          "name": "GET - Liste des institutions",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/institutions",
              "host": ["{{base_url}}"],
              "path": ["institutions"]
            }
          }
        },
        {
          "name": "POST - Créer une institution",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Université de Lomé\",\n  \"address\": \"Lomé, Togo\",\n  \"phone\": \"+228 22 22 00 00\",\n  \"email\": \"contact@univ-lome.tg\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/institutions",
              "host": ["{{base_url}}"],
              "path": ["institutions"]
            }
          }
        },
        {
          "name": "GET - Détails institution",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/institutions/1",
              "host": ["{{base_url}}"],
              "path": ["institutions", "1"]
            }
          }
        },
        {
          "name": "PUT - Modifier institution",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Université de Lomé - Modifié\",\n  \"address\": \"Lomé, Togo\",\n  \"phone\": \"+228 22 22 00 00\",\n  \"email\": \"contact@univ-lome.tg\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/institutions/1",
              "host": ["{{base_url}}"],
              "path": ["institutions", "1"]
            }
          }
        },
        {
          "name": "DELETE - Supprimer institution",
          "request": {
            "method": "DELETE",
            "header": [],
            "url": {
              "raw": "{{base_url}}/institutions/1",
              "host": ["{{base_url}}"],
              "path": ["institutions", "1"]
            }
          }
        }
      ]
    },
