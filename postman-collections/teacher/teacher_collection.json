{
  "info": {
    "name": "Teacher API Collection",
    "description": "Collection des endpoints pour les enseignants de la plateforme de quiz",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "auth": {
    "type": "bearer",
    "bearer": [
      {
        "key": "token",
        "value": "{{teacher_token}}",
        "type": "string"
      }
    ]
  },
  "variable": [
    {
      "key": "base_url",
      "value": "http://localhost:8000/api"
    },
    {
      "key": "teacher_token",
      "value": ""
    }
  ],
  "item": [
    {
      "name": "Authentification",
      "item": [
        {
          "name": "Login Enseignant",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"teacher@example.com\",\n  \"password\": \"password\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/teacher/login",
              "host": ["{{base_url}}"],
              "path": ["teacher", "login"]
            }
          }
        },
        {
          "name": "Me (Profil)",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/teacher/me",
              "host": ["{{base_url}}"],
              "path": ["teacher", "me"]
            }
          }
        },
        {
